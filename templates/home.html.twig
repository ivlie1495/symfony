{% extends "base.html.twig" %}

{% block title %}Full Stack Test{% endblock %}

{% block stylesheets %}
  <style>
    @media (max-width: 992px) {
      .promo {
        display: none !important;
      }
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container d-flex justify-content-between my-2 promo">
    <div>
      <small class="text-secondary">Gratis Ebook 9 Cara Cerdas Menggunakan Domain</small>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      {% for headerInfo in headerInfos %}
        <span class="pl-3 d-flex justify-content-center align-items-center">
          <i class="bi bi-{{ headerInfo.icon }}"></i>
          <small class="text-secondary pl-2">{{ headerInfo.title }}</small>
        </span>
      {% endfor %}
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light border">
    <div class="container">
      <img src="/images/niagahoster-logo.png" alt="Logo" width="200" height="50" />
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
          {% for menu in menus %}
            <li class="nav-item">
              <a class="nav-link pr-0 pl-3" href="#">{{menu}}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
{% endblock %}